<div class="container">
  <h1>My Tasks</h1>
</div>


<%= form_for @new_task do |f| %>
  <div>
    <%= f.label :title  %>
    <%= f.text_field :title, value: @new_task.title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details, value: @new_task.details %>
  </div>
   <div>
    <%= f.submit %>
  </div>
<% end %>

<div>
  <h3><%= link_to "Back to list", tasks_path %></h3>
</div>

