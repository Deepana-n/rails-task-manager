<h2><%= @task.title%></h2>
<p><%= @task.details%></p>
<% if @task.completed %>
  <%= 'The task is completed ✅' %>
<% else %>
  <%= 'The task is not completed ❌' %>
<% end %>

<div>
  <h3><%= link_to "Back to list", tasks_path %></h3>
</div>

<div>
  <h3><%= link_to "Edit", edit_task_path(@task) %></h3>
</div>

